<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movieGrey">

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/rowdies"
            android:gravity="top|center"
            android:text="MATCH"
            android:textColor="@color/movieWhite"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvMovie" />

        <TextView
            android:id="@+id/tvMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="@font/rowdies"
            android:text="MOVIE"
            android:textColor="@color/movieYellow"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:text="Filmes assistidos"
        android:textColor="@color/movieYellow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/sample2">
        </ImageView>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:src="@drawable/sample1">
        </ImageView>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:src="@drawable/sample_fightclub">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/sample4">
        </ImageView>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:src="@drawable/sample_barbie">
        </ImageView>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:src="@drawable/sample_madagascarr">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/sample_titanic">
        </ImageView>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:src="@drawable/sample_joker">
        </ImageView>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:src="@drawable/sample_soul">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/sample_titanic">
        </ImageView>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:id="@+id/sampleJoker"
            android:src="@drawable/sample_joker">
        </ImageView>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:src="@drawable/sample_soul">
        </ImageView>
    </LinearLayout>
</LinearLayout>